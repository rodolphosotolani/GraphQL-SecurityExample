scalar Date @specifiedBy(url: "https://tools.ietf.org.html/rfc3339")

type Query {
    coffee(id: ID!): Coffee!
    coffees: [Coffee!]
    order(id: ID!): Order!
    orders: [Order!]
}

type Mutation {
    createCoffee(name: String!, size: SizeCoffee!): Coffee
}

type Order {
    id: ID!
    user: User!
    coffee: Coffee!
    orderedOn: Date!
}

type User {
    id: ID!
    name: String!
}

type Coffee {
    id: ID!
    name: String!
    size: SizeCoffee!

}

enum SizeCoffee {
    SHORT,
    TAll,
    GRANDE,
    VENTI
}